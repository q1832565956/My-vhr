<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javaboy.vhr.dao.MenuRoleDao">

    <resultMap id="BaseResultMap" type="com.javaboy.vhr.entity.MenuRole">
        <!--@Table menu_role-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="mid" column="mid" jdbcType="INTEGER"/>
        <result property="rid" column="rid" jdbcType="INTEGER"/>
    </resultMap>


    <delete id="doDeleteRid">
        delete from menu_role where rid=#{rid}
    </delete>

    <insert id="doUpdateMenuRoles">
        insert into menu_role (mid,rid) values
        <foreach collection="mids" separator="," item="mid">
            (#{mid},#{rid})
        </foreach>
    </insert>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, mid, rid
        from menu_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, mid, rid
        from menu_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, mid, rid
        from menu_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="mid != null">
                and mid = #{mid}
            </if>
            <if test="rid != null">
                and rid = #{rid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into menu_role(mid, rid)
        values (#{mid}, #{rid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update menu_role
        <set>
            <if test="mid != null">
                mid = #{mid},
            </if>
            <if test="rid != null">
                rid = #{rid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from menu_role where id = #{id}
    </delete>

</mapper>