<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javaboy.vhr.dao.RoleDao">

    <resultMap id="BaseResultMap" type="com.javaboy.vhr.entity.Role">
        <!--@Table role-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="namezh" column="nameZh" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name, nameZh
        from trader.role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name, nameZh
        from trader.role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name, nameZh
        from trader.role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="namezh != null and namezh != ''">
                and nameZh = #{namezh}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into trader.role(name, nameZh)
        values (#{name}, #{namezh})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update trader.role
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="namezh != null and namezh != ''">
                nameZh = #{namezh},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from trader.role where id = #{id}
    </delete>

    
    <select id="loadRolenmae" resultMap="BaseResultMap">
        select * from role where id in (select rid from hr_role where hrid=#{hrId})
    </select>
</mapper>