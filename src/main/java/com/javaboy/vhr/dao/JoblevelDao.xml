<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javaboy.vhr.dao.JoblevelDao">

    <resultMap id="BaseResultMap" type="com.javaboy.vhr.entity.Joblevel">
        <!--@Table joblevel-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="titlelevel" column="titleLevel" jdbcType="OTHER"/>
        <result property="createdate" column="createDate" jdbcType="TIMESTAMP"/>
        <result property="enabled" column="enabled" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name, titleLevel, createDate, enabled
        from joblevel
        where id = #{id}
    </select>
<delete id="deleteAll">
    delete from joblevel
    <where>
        id in
        <foreach collection="joblevels" close=")" open="(" item="joblevel" separator=",">
            #{joblevel.id}
        </foreach>
    </where>
</delete>
    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name, titleLevel, createDate, enabled
        from joblevel
        limit #{offset}, #{limit}
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name, titleLevel, createDate, enabled
        from joblevel
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="titlelevel != null">
                and titleLevel = #{titlelevel}
            </if>
            <if test="createdate != null">
                and createDate = #{createdate}
            </if>
            <if test="enabled != null">
                and enabled = #{enabled}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into joblevel(name, titleLevel, createDate, enabled)
        values (#{name}, #{titlelevel}, #{createdate}, #{enabled})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update joblevel
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="titlelevel != null">
                titleLevel = #{titlelevel},
            </if>
            <if test="createdate != null">
                createDate = #{createdate},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from joblevel where id = #{id}
    </delete>

</mapper>