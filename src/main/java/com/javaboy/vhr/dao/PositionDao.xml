<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javaboy.vhr.dao.PositionDao">

    <resultMap id="BaseResultMap" type="com.javaboy.vhr.entity.Position">
        <!--@Table position-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="createdate" column="createDate" jdbcType="TIMESTAMP"/>
        <result property="enabled" column="enabled" jdbcType="OTHER"/>
    </resultMap>

    <delete id="deleteAll">
        delete from position
        <where>
            id in
            <foreach collection="positions" item="position" separator="," open="(" close=")">
                #{position.id}
            </foreach>
        </where>
    </delete>
    
    <select id="getAll" resultMap="BaseResultMap">
       SELECT * FROM `position`
    </select>
    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name, createDate, enabled
        from position
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name, createDate, enabled
        from position
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name, createDate, enabled
        from position
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="createdate != null">
                and createDate = #{createdate}
            </if>
            <if test="enabled != null">
                and enabled = #{enabled}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into position(name, createDate, enabled)
        values (#{name}, #{createdate}, #{enabled})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update position
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="createdate != null">
                createDate = #{createdate},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from position where id = #{id}
    </delete>

</mapper>